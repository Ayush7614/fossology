# This file provides configuration for Scheduler.
# It relies on environment variables so as to be used directly
# in container based deployments

. $(dirname $0)/fo-config-common.sh

f_log "Configure container: SCHEDULER"

#### #### #### #### #### #### #### #### #### #### #### #### #### ####
# Proxy confgiguration
fossology_conf="{$SYSCONFDIR}/fossology.conf"
if [ -n "$HTTPS_PROXY$HTTP_PROXY$FTP_PROXY" ]
then
    f_log "Proxy: Configure $fossology_conf"
cat >>$fossology_conf <<EOF
http_proxy="$HTTP_PROXY"
https_proxy="$HTTPS_PROXY"
ftp_proxy="$FTP_PROXY"
no_proxy="$NO_PROXY"
EOF
else
    f_log "Proxy: no proxy to configure"
fi

# Extra keywords for Keywords agent
if [ -n "$FOSSOLOGY_CONF_EXTRA_KEYWORDS" ]; then
  $(dirname $0)/fo-config_set-keywords "$FOSSOLOGY_CONF_EXTRA_KEYWORDS"
else
    f_log "Keywords for the 'keyword' agent: no keyword configured"
fi
